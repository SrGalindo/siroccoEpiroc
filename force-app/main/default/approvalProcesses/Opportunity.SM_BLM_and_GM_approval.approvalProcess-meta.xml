<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approval_criteria_Sales_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>SM approval</label>
        <name>SM_approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approval_criteria_BLM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>BLM approval</label>
        <name>BLM_approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approval_criteria_GM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>GM approval</label>
        <name>GM_approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approval_request_approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>Opportunity_approval_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Record_is_locked_checkbox_unchecked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sales_Gates_Approve_proposal_quote</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_request_rejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>Record_is_locked_checkbox_unchecked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>set_back_the_opp</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Record_is_locked_checkbox_checked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SM, BLM and GM approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Record_is_locked_checkbox_unchecked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>set_back_the_opp</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
